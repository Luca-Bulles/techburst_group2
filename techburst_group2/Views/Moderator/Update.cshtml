@model techburst_group2.Models.RegisterViewmodel

<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <div class="card shadow p-3">
            <form asp-action="View">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="@Model.ID" class="form-control" type="hidden" readonly />
                    <span asp-validation-for="@Model.ID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.FirstName" class="control-label disabled"></label>
                    <input asp-for="@Model.FirstName" class="form-control disabled" readonly />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LastName" class="control-label disabled"></label>
                    <input asp-for="@Model.LastName" class="form-control disabled" readonly />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label disabled"></label>
                    <input asp-for="@Model.Email" class="form-control disabled" readonly />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="control-label disabled"></label>
                    <input asp-for="@Model.Password" class="form-control disabled" readonly />
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Role" class="control-label"></label>
                    <select asp-for="Role" class="form-control">
                        <option></option>
                        <option value="User">User</option>
                        <option value="Employee">Employee</option>
                        <option value="Moderator">Moderator</option>
                    </select>
                    <span asp-validation-for="@Model.Role" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button class="btn btn-sm btn-warning btn-outline-dark input text-center" type="submit" asp-controller="Moderator" asp-action="Update">Update my profile!</button>
                </div>

            </form>
        </div>
    </div>
    <div class="col-md-3">

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}