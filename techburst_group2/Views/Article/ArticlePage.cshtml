@{
    @inject ITagCollection TagCollection
    @using Interfaces.BLL
    @model ArticleModel
    ViewBag.ArticlePage = true;
}
<style>

    .article-header {
        position: absolute;
        clip: rect(0px, 30px, 300px, 0px);
    }

    .article-header-container {
    }
</style>
<body>
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div class="col-1">

                </div>
                <div class="col-10">
                    <div class="justify-content-center">
                        <b class="text-warning">@Html.ActionLink("Back to article overview", "Articles", "Home")</b>

                    </div>
                </div>

                <div class="col-1">

                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row pt-3">
                <div class="col-1">

                </div>
                <div class="col-10 m-1 p-3 text-white">
                    <div class="article-header-container">
                        <img src="@Model.Images" class="rounded mx-auto d-block" alt="Article Image">
                    </div>
                </div>
                <div class="col-1">

                </div>
            </div>
        </div>
        <div class="=col-md-12">
            <div class="row">
                <div class="col-1">

                </div>
                <div class="col-10">
                    <h1 class="font-weight-bold pt-4">@Html.DisplayFor(model => model.Title)</h1>
                    <p class="card-text font-weight-bold pt-4">@Html.DisplayFor(model => model.Content)</p>
                </div>
                <div class="col-1">

                </div>

            </div>
        </div>
        <div class="=col-md-12">
            <div class="row">
                <div class="col-1">

                </div>
                <div class="col-10">
                    <p>

                    </p>
                    <h4>Leave a comment!</h4>
                    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
                    <div class="container">
                        <div class="be-comment-block">
                            <h1 class="comments-title">Comments (3)</h1>
                            <div class="be-comment">
                                <div class="be-img-comment">
