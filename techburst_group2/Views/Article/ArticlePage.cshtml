@{
    @inject ITagCollection TagCollection
    @using Interfaces.BLL
    @model ArticleModel
    ViewBag.ArticlePage = true;
}

<style>
    .article-header {
        position: absolute;
        clip: rect(0px, 30px, 300px, 0px);
    }

    .article-header-container {
    }
</style>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <b class="text-danger">@Html.ActionLink("Terug naar artikeloverzicht", "Articles", "Home")</b>
            </div>
        </div>
        <div class="article-header-container">
            <img class="article-header" src="@Model.Images" alt="Article picture">
        </div>
        <div class="container">
            <h1>@Html.DisplayFor(model => model.Title)</h1>
            <p>@Html.DisplayFor(model => model.Content)</p>
        </div>
    </div>
</body>